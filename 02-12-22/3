#include <iostream>
#include <cmath>
#include <iomanip>
#include <windows.h>
#include <vector>
#include <string>
using namespace std;



int main()
{
	int x, n,fac;
	fac = 2;
	double sum = 0;
	long double eps = 1e-12;
	cin >> x;
	int xstep = x * x;
	for (int n = 1; ; n++)
	{
		if (n == 1) sum += 0;
		else if (n * (n - 1) * ((double)xstep / fac) < eps) break;
		else sum += n * (n - 1) * ((double)xstep / fac);
		xstep *= x * x;
		for (int j = 4; j <= 2 * n; j+= 2)
		{
			fac *= (j - 1) * j;
		}
	}
	cout << sum;
}
